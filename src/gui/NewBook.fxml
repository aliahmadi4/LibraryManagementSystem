<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.NewBookControler">
   <children>
      <GridPane prefHeight="300.0" prefWidth="600.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="261.0" minWidth="10.0" prefWidth="131.0" />
            <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" maxWidth="380.0" minWidth="10.0" prefWidth="228.0" />
            <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" maxWidth="380.0" minWidth="10.0" prefWidth="233.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Title" GridPane.rowIndex="1" />
            <Label text="ISBN" GridPane.rowIndex="2" />
            <Label text="Number of Copy" GridPane.rowIndex="3" />
            <TextField fx:id="title" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="isbn" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="noOfCopy" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#saveAction" text="Save" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#cancelAction" text="Cancel" GridPane.rowIndex="5" />
            <Label text="Add New Book" GridPane.columnIndex="1" />
            <Label text="CHeckout Length" GridPane.rowIndex="4" />
            <TextField fx:id="checkoutLength" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Button mnemonicParsing="false" onAction="#addAuthor" text="Add Author" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <Label fx:id="authorsLabel" text="Authors:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </GridPane>
   </children>
</AnchorPane>
